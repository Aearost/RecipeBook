    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="nameLabel">
         <font>
            <Font name="Lucida Bright Demibold" size="24.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Label>
      <Label fx:id="descriptionLabel">
         <font>
            <Font name="Lucida Bright Demibold" size="14.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Label>
      <Line endX="320.29290771484375" endY="-0.20710676908493042" startX="-373.39642333984375" startY="-0.2083234190940857" />
      <ImageView fx:id="recipeImageView" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="CENTER" prefHeight="560.0" prefWidth="960.0" spacing="20.0">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="143.0" prefWidth="960.0" spacing="10.0">
               <children>
                  <Label fx:id="descriptionLabel1" text="Ingredients:">
                     <font>
                        <Font name="Lucida Bright Demibold" size="16.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
                  <TextArea fx:id="ingredientsTextArea" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" wrapText="true">
                     <font>
                        <Font name="Lucida Bright" size="16.0" />
                     </font>
                  </TextArea>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="143.0" prefWidth="960.0" spacing="10.0">
               <children>
                  <Label fx:id="descriptionLabel11" text="Steps:">
                     <font>
                        <Font name="Lucida Bright Demibold" size="16.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
                  <TextArea fx:id="stepsTextArea" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" wrapText="true">
                     <font>
                        <Font name="Lucida Bright" size="16.0" />
                     </font>
                  </TextArea>
               </children>
            </HBox>
            <Button fx:id="recipeBackButton" mnemonicParsing="false" onAction="#onRecipeBackButtonClick" text="Return Home" />
         </children>
      </VBox>
   </children>
